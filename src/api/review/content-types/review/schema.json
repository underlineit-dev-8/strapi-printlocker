{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "description": {
      "type": "text",
      "required": true
    },
    "creator": {
      "type": "string",
      "required": true
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "platform": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "LinkedIn",
        "Facebook",
        "Twitter",
        "Google",
        "Instagram",
        "Other"
      ]
    }
  }
}
